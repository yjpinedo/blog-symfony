{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="count">
        {{ posts.getTotalItemCount }}
    </div>
    <table>
        <tr>
            {# sorting of properties based on query components #}
            <th>{{ knp_pagination_sortable(posts, 'Id', 'p.id') }}</th>
            <th{% if posts.isSorted('p.title') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(posts, 'Title', 'p.title') }}
            </th>
            <th{% if posts.isSorted(['a.created_at']) %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(posts, 'Release', ['a.created_at']) }}
            </th>
        </tr>

        {# table body #}
        {% for post in posts %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>
</div>
{% endblock %}
